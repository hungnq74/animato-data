{
  "name": "animato-data",
  "version": "1.0.0",
  "description": "A full-stack analytics platform for data processing, visualization, and insights generation",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m flask run",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "lint": "cd frontend && npm run lint",
    "test": "cd backend && pytest",
    "format": "cd backend && black .",
    "clean": "rm -rf frontend/node_modules frontend/dist backend/__pycache__"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "analytics",
    "data-visualization",
    "react",
    "typescript",
    "python",
    "flask"
  ],
  "author": "Animato Data Team",
  "license": "MIT"
}
